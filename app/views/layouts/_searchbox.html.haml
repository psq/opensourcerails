#search_box
  - form_tag projects_url, :method => :get do
    %fieldset
      = text_field_tag :q, @search_term || "", :class => "search_input example", :title => "Search for a #{AppConfig.directory_type}..."
      = image_submit_tag "find.png", :class => "search_sub find", :id => "searchsubmit"
    = clear